@model BusinessProject.DataModelLayer.Entities.SystemUsers
@{
    Layout = null;
}



<!-- The Modal -->
<div class="modal fade" id="TestModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header" style="background-color:#0d7171; color:white; border-radius:5px 5px 0 0;">
                    <h6 class="modal-title">@ViewBag.ViewTitle</h6>
                    <button type="button" class="close pull-left" data-dismiss="modal">&times;</button>
               
               
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form asp-controller="UserManager" asp-action="ActiveDeActiveUserPost" method="post">


                    @if (Model.IsActive == 1)
                    {
                    <div class="modal-body form-horizontal">
                        <h4>
                            Are you sure you want to Inactivate
                            <span class="font-weight-bold">@Model.FirstName @Model.Family</span>
                            ?
                        </h4>
                    </div>
                    }
                    else
                    {
                        <div class="modal-body form-horizontal">
                            <h4>
                                Are you sure you want to activate
                                <span class="font-weight-bold">@Model.FirstName @Model.Family</span>
                                ?
                            </h4>
                        </div>
                    }

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IsActive" />
                    <div class="modal-footer" style="text-align:left">
                        <button type="button" data-dismiss="modal" style="width:80px" class="btn btn-default">Back</button>
                        <button type="submit" class="btn" style="width:80px; color:white; background-color:#0b6b75">Continue</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

