@model IEnumerable<BusinessProject.DataModelLayer.Entities.Contract>

@{
    ViewData["Title"] = "Contracts";
    int counter = 1;
}

<style>
    .swal2-content {
        font-size: 18px !important;
        color: #096060;
    }

    .swal2-icon {
        margin: 2px auto 3px !important;
    }
</style>
<div id="placeholder"></div>


<div class="public">
    <div class="public-header">
        <span>
            <i class="fa fa-file-contract"></i>
            Display all Contracts
        </span>
    </div>

    <!--For Search -->
    <div class="input-group mb-3 col-md-5" style="margin: 5px 5px !important; margin-top:10px !important">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-search"></i></span>
        </div>
        <input type="text" class="form-control" placeholder="search for emplyee..." id="myInput" onkeyup="myfunction()">
    </div>
    <!--End Search -->

    <div style="border-radius: 2px; box-shadow: 3px 3px 1px 0 gray; padding:10px 5px; border: 1px solid gray; background-color:white;">
        <table class="table table-bordered table-hover table-striped" style="background-color:white !important; font-size:16px;border-radius:2px; box-shadow:3px 3px 1px 0 gray;">
            <thead style="background-color:#096060; color:white;">
                <tr>
                    @*<td>Employee-Pic</td>
                    <td>Full Name</td>*@
                    <td>Gross Salary</td>
                    <td>Position</td>
                    <td>From</td>
                    <td>To</td>
                    <td>Contract Type</td>
                    <td>Currency</td>

                    <td>Operations</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td style="padding:0 !important; text-align:center"><img src="~/img/upload/userimage/@item.User.UserImg" width="40" height="45" style="border-radius:50%" /></td>
                        <td>@item.User.FirstName @item.User.Family</td>*@
                        <td>@item.GrossSalary</td>
                        <td>@item.Position</td>
                        <td>@string.Format("{0:yyyy/MM/dd}", item.StartDate)</td>
                        <td>@string.Format("{0:yyyy/MM/dd}", item.EndDate)</td>
                        <td>
                            @if (item.ContractType == 1)
                            {
                                <span>Project Bassed</span>
                            }
                            else
                            {
                                <span>Time Based</span>
                            }
                        </td>
                        <td>
                            @if (item.Currency == 1)
                            {
                                <span>afs</span>
                            }
                            else
                            {
                                <span>$</span>
                            }
                        </td>
                        <td>
                            <div class="row" style="margin:0 !important">
                                <a asp-controller="Contract" asp-action="EditContract" asp-route-ContractId="@item.ContractId"
                                   
                                   style="height:30px;  font-size:14px; margin-right:3px;"
                                   class="btn btn-warning" title="Edit">
                                    Edit
                                    <i class="fa fa-edit"></i>
                                </a>
                            </div>

                        </td>
                    </tr>
                    counter++;
                }

            </tbody>
        </table>
    </div>

</div>


